{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/libs/*": ["./src/libs/*"],
      "@/handlers/*": ["./src/handlers/*"],
      "@/api/*": ["./src/api/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "test/**/*"]
}
